.bg-triangle {
    width: 100%;
    height: 100vh;
    background-image: url("http://47.105.220.82:8081/huadeen/img/bg-main.png");
    background-size: 160rpx 161rpx;
    background-repeat: repeat;
}

page {
    background-color: #fff;
}

.top {
    display: flex;
    align-items: center;
    padding: 0 40rpx;
    margin-top: 20rpx;
}

.search_input {
    padding: 18rpx 40rpx;
    box-sizing: border-box;
    width: 554rpx;
    height: 66rpx;
    background-color: #F3F5F9;
    border-radius: 33rpx;
    position: relative;
}

.input_text_line {
    position: absolute;
    right: 97rpx;
    top: 50%;
    transform: translate(0%, -50%);
    width: 2rpx;
    opacity: 0.5;
    height: 36rpx;
    background-color: #909399;
}

.input_icon {
    position: absolute;
    right: 29rpx;
    top: 50%;
    transform: translate(0%, -50%);
    width: 39rpx;
    height: 39rpx;
}

.line-swiper {
    width: 100%;
    height: 34rpx;
}

.center_line {
    width: 100%;
    padding: 0 40rpx;
    box-sizing: border-box;
    display: flex;
    margin-top: 50rpx;
    align-items: center;
    justify-content: space-between;
}

.center_line .text {
    font-size: 32rpx;
    font-weight: bold;
}

.center_line .time {
    font-size: 24rpx;
    color: silver;
}

.body_content {
    padding: 0 40rpx;
    height: 500rpx;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-top: 50rpx;
    overflow-y: scroll;
}

.body_content .element_item {
    width: 325rpx;
    margin-bottom: 20rpx;
    height: 346rpx;
    box-shadow: 0 24rpx 48rpx 0 rgba(1, 60, 191, 0.10);
    border-radius: 29rpx;
    background-color: white;
}