.bg-triangle {
    width: 100%;
    height: 100vh;
    background-image: url("http://47.105.220.82:8081/huadeen/img/bg-main.png");
    background-size: 160rpx 161rpx;
    background-repeat: repeat;
}

page {
    background-color: #fff;
}

.top {
    display: flex;
    align-items: center;
    padding: 0 40rpx;
    margin-top: 20rpx;
}

.search_input {
    padding: 18rpx 40rpx;
    box-sizing: border-box;
    width: 554rpx;
    height: 66rpx;
    background-color: #F3F5F9;
    border-radius: 33rpx;
    position: relative;
}

.input_text_line {
    position: absolute;
    right: 97rpx;
    top: 50%;
    transform: translate(0%, -50%);
    width: 2rpx;
    opacity: 0.5;
    height: 36rpx;
    background-color: #909399;
}

.input_icon {
    position: absolute;
    right: 29rpx;
    top: 50%;
    transform: translate(0%, -50%);
    width: 39rpx;
    height: 39rpx;
}

.line-swiper {
    width: 100%;
    white-space: nowrap;
    font-size: 30rpx;
    color: #000;
    margin-bottom: 33rpx;
    margin-top: 33rpx;
    padding: 0 32rpx;
    padding-left: 0;
}

.line-swiper::-webkit-scrollbar {
    display: none;
    width: 0;
    height: 0;
    color: transparent;
}

.line-swiper .swiper-item {
    display: inline-block;
    width: 136rpx;
    margin-right: 21rpx;
    text-align: center;
}

.swiper-item .line {
    width: 26rpx;
    height: 4rpx;
    background-color: #013CBF;
    border-radius: 2rpx;
    margin: 0 auto;
}

.noline {
    width: 26rpx;
    height: 4rpx;
    background-color: transparent;
    border-radius: 2rpx;
    margin: 0 auto;
}

.center_line {
    width: 100%;
    padding: 0 40rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.center_line .text {
    font-size: 32rpx;
    font-weight: bold;
}

.center_line .time {
    font-size: 24rpx;
    color: silver;
    position: relative;
}

.pailie {
    position: absolute;
    top: 60rpx;
    z-index: 1000;
    right: 50rpx;
    border-radius: 10rpx;
}

.pailie .item {
    font-size: 24rpx;
    padding: 15rpx 30rpx;
}

.bujucontent {
    margin-top: 30rpx;
    position: relative;
    width: 100%;
    height: calc(100vh - 600rpx);
}

.body_content {
    padding: 0 40rpx;
    position: absolute;
    top: 40rpx;
    bottom: 0;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-top: 30rpx;
    padding-bottom: 50rpx;
    overflow-y: scroll;
}

.body_content .element_item {
    width: 325rpx;
    margin-bottom: 20rpx;
    height: 346rpx;
    box-shadow: 0 24rpx 48rpx 0 rgba(1, 60, 191, 0.10);
    border-radius: 29rpx;
    background-color: white;
}

.element_item .element_top {
    width: 100%;
    height: 50%;
    border-top-left-radius: 29rpx;
    border-top-right-radius: 29rpx;
}

.element_bottom {
    padding: 24rpx;
    box-sizing: border-box;
}

.element_tools_list {
    display: flex;
}

.bottom_line {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 25rpx;
    color: #0E0F11;
    font-size: 20rpx;
}

.element_tools_list .item {
    font-size: 22rpx;
    display: flex;
    color: #202123;
    margin-top: 10rpx;
    align-items: center;
    margin-right: 30rpx;
}

.element_item_name {
    font-size: 28rpx;
    color: #202123;
    font-weight: bold;
}
.pailieactived{
    background-color: #417CFF;
    color: white;
}
.pailienone{
    background-color: white;
    color: silver;
}