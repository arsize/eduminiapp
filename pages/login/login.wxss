page {
    background-image: url("http://121.4.213.7/img/bg-main.png");
    background-size: 160rpx 161rpx;
    background-repeat: repeat;
}

.login_container {}

.btn_box {
    display: flex;
    flex-direction: column;
    align-items: center;
}

.login_top {
    width: 100%;
    height: 477rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.loginBtn {
    display: flex;
    align-items: center;
    justify-content: center;
}

.loginBtnByMobile {
    background: #061E58;
    border: 1rpx solid rgba(255, 255, 255, 0.3);
    border-radius: 42rpx;
    border-radius: 42rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #fff;
    margin-top: 50rpx;
}

.bottom_xieyi {
    position: absolute;
    bottom: 110rpx;
    left: 50%;
    width: 100%;
    text-align: center;
    transform: translate(-50%, -50%);
    font-size: 24rpx;
    color: white;
}

.dialogNoRegistered {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    padding: 48rpx;
    width: 560rpx;
    height: 250rpx;
    border-radius: 8rpx;
    background-color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 1000;
}

.dialogNoRegistered .dialogTop {
    font-size: 36rpx;
    color: #000000;
    line-height: 54rpx;
    font-weight: bold;
    margin-bottom: 28rpx;
}

.dialogNoRegistered .dialogBody {
    font-size: 30rpx;
    padding: 10rpx 0;
    color: #888888;
    display: flex;
    justify-content: center;
    align-items: center;
}

.dialogNoRegistered .bottomBar {
    border-top: 1px solid #e5e5e5;
    position: absolute;
    bottom: 0;
    width: 100%;
    height: 100rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #02bb00;
    font-size: 36rpx;
}