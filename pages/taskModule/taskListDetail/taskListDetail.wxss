/* pages/taskModule/taskListDetail/taskListDetail.wxss */
.task-list-detail-class {
  width: 100%;
}

.task-list-detail-class__detail {
  width: 100%;
  background: #fff;
}

.task-list-detail-class__detail__top {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 5%;
  box-sizing: border-box;
}

.task-list-detail-class__detail-title {
  display: flex;
  flex-direction: column;
}

.task-list-detail-class__detail-title text:nth-child(1) {
  margin-bottom: 6rpx;
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.85);
  font-weight: 500;
}

.task-list-detail-class__detail-title text:nth-child(2) {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.45)
}

.task-list-detail-class__detail-cont {
  padding: 0rpx 5% 20rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.65)
}

.task-list-detail-class__detail-img {
  padding: 0rpx 5% 20rpx;
  box-sizing: border-box;
}

.task-list-detail-class__detail-img .task-pic {
  width: 21%;
  height: 100rpx;
  margin: 0 4% 10rpx 0;
}

.task-list-detail-class__detail-img .task-pic:nth-child(4n) {
  margin-right: 0;
}

.task-list-detail-class__detail-time-end {
  display: flex;
  justify-content: start;
  align-items: center;
  padding: 0rpx 5% 20rpx;
}

.task-list-detail-class__detail-time-end image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.task-list-detail-class__detail-time-end text {
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.75);
}

.task-list-detail-class__detail-type {
  width: 100%;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  margin-top: 20rpx;
}

.task-list-detail-class__detail-type-cont {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  flex-direction: column;
  width: 140rpx;
  padding-bottom: 20rpx;
  box-sizing: border-box;
  /* border-bottom: 6rpx solid rgba(1, 36, 178,1); */
}

.border-active {
  border-bottom: 6rpx solid rgba(1, 36, 178, 1) !important;

}

.task-list-detail-class__detail-type-cont text:nth-child(1) {
  font-size: 32rpx;
  font-weight: 500;
}

.task-list-detail-class__detail-type-cont text:nth-child(2) {
  font-size: 24rpx;
}

.task-list-detail-class__list {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}

.task-list-detail-class_has__list-item {
  width: 80%;
  padding: 32rpx;
  margin-bottom: 30rpx;
  border-radius: 30rpx;
  background: #fff;
}

.task-list-detail-class__list-item_top {
  display: flex;
  width: 100%;
}

.task-list-detail-class__list-item_top .list-pic {
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
}

.task-list-detail-class__list-item__wrap {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  margin-left: 20rpx;
  /* background: red; */
}

.task-list-detail-class__list-item__wrap-top .title {
  width: 100%;
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.85);

}

.task-list-detail-class__list-item__wrap-top .about {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 10rpx;
}

.task-list-detail-class__list-item__wrap-top .about .about__num {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-right: 40rpx;
}

.task-list-detail-class__list-item__wrap-top .about .about__num .about-pic {
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx 0 0;
}

.task-list-detail-class__list-item__wrap-top .about text {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.45);
}

.task-list-detail-class__list-item__wrap-bottom {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.task-list-detail-class__list-item__wrap-bottom .belong {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.task-list-detail-class__list-item__wrap-bottom .belong image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.task-list-detail-class__list-item__wrap-bottom .belong text {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.75);
}

.task-list-detail-class__list-item__wrap-bottom .time {
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.45);
}

.task-list-detail-class__list-item_bottom {
  display: flex;
  align-items: center;
  padding: 4rpx 10rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  background: rgba(0, 0, 0, .05);
  border-radius: 10rpx;
}

.task-list-detail-class__list-item_bottom text:nth-child(1) {
  font-size: 24rpx;
  color: rgba(1, 36, 178, 1);
  padding: 4rpx 10rpx;
  margin-right: 20rpx;
  background: rgba(1, 36, 178, .2);
  border-radius: 20rpx;
}

.task-list-detail-class__list-item_bottom text:nth-child(2) {
  flex: 1;
  font-size: 26rpx;
  color: rgba(0, 0, 0, 0.85);
}

.task-list-detail-class_no__list-item {
  width: 100%;
  margin-bottom: 30rpx;
}

.task-list-detail-class_no__list-item .submit-btn {
  margin-left: 5%;
  width: 120rpx;
  padding: 10rpx 20rpx;
  font-size: 28rpx;
  color: rgba(1, 36, 178, 1);
  border-radius: 30rpx;
  border: 2rpx solid rgba(1, 36, 178, .3);
  background: #fff;
}

.task-list-detail-class_no__list-item .list_item {
  display: flex;
  align-items: center;
  width: 100%;
  padding: 32rpx 5%;
  margin-top: 30rpx;
  box-sizing: border-box;
  background: #fff;
}

.task-list-detail-class_no__list-item .list_item image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 50%;

}

.task-list-detail-class_no__list-item .list_item .list_item_right {
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
}

.task-list-detail-class_no__list-item .list_item .list_item_right text:nth-child(1) {
  font-size: 32rpx;
  color: rgba(0, 0, 0, 0.85);
  font-weight: 500;
}

.task-list-detail-class_no__list-item .list_item .list_item_right text:nth-child(2) {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: rgba(0, 0, 0, 0.45);
}