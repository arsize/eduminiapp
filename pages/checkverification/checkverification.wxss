page{
  background-color: white;
}
.mobilelogin {
  width: 100%;
  margin-top: 115rpx;
  box-sizing: border-box;
}
.mobilelogin .topmobile {
  width: 100%;
}
.mobilelogin .topmobile .bottom {
  width: 90%;
  display: flex;
  justify-content:flex-start;
  align-items: center;
  margin: 20rpx auto;
}
.mobilelogin .topmobile .verification {
  font-size: 30rpx;
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}
.mobilelogin .topmobile .bottom .bottomRight {
  font-size: 28rpx;
  color: #b2b2b2;
}
.mobilelogin .topmobile .top {
  color: #333333;
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 42rpx;
  margin-bottom: 10rpx;
}
.mobilelogin .topmobile .mobileinput {
  width: 90%;
  margin: 0 auto;
  box-sizing: border-box;
  position: relative;
  z-index: 900;
}
.mobilelogin .topmobile .mobileinput .delicon {
  position: absolute;
  z-index: 1000;
  top: 50%;
  right: 0;
  transform: translate(-50%, -50%);
}
.mobilelogin .topmobile .mobileinput .weui-input {
  padding: 33rpx 0;
  width: 100%;
  border-bottom: 1rpx solid #e5e5e5;
}
.mobilelogin .mobileBtn {
  width: 630rpx;
  height: 100rpx;
  background-color: #eeeeee;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #888888;
  border-radius: 12rpx;
  margin: 150rpx auto;
}
.mobilelogin .mobileBtnactive {
  width: 630rpx;
  height: 100rpx;
  background-color: #27c273;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #ffffff;
  border-radius: 12rpx;
  margin: 150rpx auto;
}
.bottomText {
  width: 100%;
  justify-content: center;
  left: 50%;
  transform: translate(-50%, 0);
  position: absolute;
  bottom: 50rpx;
  text-align: center;
  color: #999999;
  font-size: 28rpx;
  display: flex;
  align-items: center;
}
.bottomText .text {
  display: flex;
  justify-content: center;
  width: 100%;
}
.mobileinput .inputnum {
  width: 100%;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
}
.mobileinput .inputnum .positioninput {
  width: 100rpx;
  height: 100rpx;
  border-radius: 5rpx;
  opacity: 0.5;
  z-index: 1000;
  background-color: transparent;
  text-align: center;
  position: absolute;
  text-indent: -999em;
  margin-left: -100%;
}
.mobileinput .inputnum .blockitem {
  width: 100rpx;
  height: 100rpx;
  border-bottom: 2rpx solid #999999;
  display: flex;
  color: #666666;
  justify-content: center;
  align-items: center;
}