/* pages/myclassModule/createClass/createClass.wxss */
page {
  background: #fff;
}

.create-class {
  width: 90%;
  margin: 0 auto;
}
.create-class-input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  height: 120rpx;
}
.create-class-input .title {
  margin-right: 60rpx;
  font-size: 30rpx;
  color: #000;
}
.create-class-input .cont {
  height: 100%;
  flex: 1;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.create-class-input .cont .picker {
  font-size: 30rpx;
  /* color: rgba(0, 0, 0, 0.5); */
}

.create-class-input .cont input {
  height: 100%;
  display: flex;
  justify-content: start;
  align-items: center;
  margin: 0;
  padding: 0;
  font-size: 30rpx;
}
.create-class-input .cont image {
  width: 32rpx;
  height: 32rpx;
}
.create-class-upload {
  width: 100%;
  margin-top: 40rpx;
}
.create-class-upload .title {
  margin-right: 60rpx;
  font-size: 30rpx;
  color: #000;
}
.create-class-upload .cont {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
  width: 140rpx;
  height: 140rpx;
  border: 1rpx dashed rgb(1, 36, 178);
  font-size: 50rpx;
  color: rgb(1, 36, 178);
}

.create-class-submit {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 200rpx;
}

.create-class-submit button {
  width: 48% !important;
  height: 80rpx;
  margin: 0;
  border-radius: 40rpx;
  font-size: 30rpx;
}

.create-class-submit button:nth-child(1) {
  border-color: rgb(1, 36, 178, 0.1) !important;
  color: rgba(1, 36, 178, 0.45);
}

.create-class-submit button:nth-child(2) {
  background: rgb(1, 36, 178, 0.5) !important;
  color: rgba(255, 255, 255, 0.75);
}
