page {
    background-color: #fff;
}

.bodycenter {
    width: 100%;
    height: 138rpx;
    box-sizing: border-box;
    padding: 38rpx 40rpx;
}

.userline {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.userinfo {
    display: flex;
    align-items: center;
}

.userinfo .userimg {
    width: 80rpx;
    height: 80rpx;
    border-radius: 80rpx;
    margin-right: 24rpx;
}

.usertext {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.time {
    width: 90rpx;
    height: 40rpx;
    background: #CDD9F2;
    border-radius: 6.67px;
    border-radius: 6.67px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
    color: #013CBF;
}

.productLine {
    display: flex;
    align-items: center;
}

.productName {
    font-size: 40rpx;
    color: #202123;
    margin-top: 40rpx;
    font-weight: bold;
    margin-bottom: 31rpx;
}

.iconlineitem {
    display: flex;
    align-items: center;
    margin-right: 40rpx;
}

.lines {
    width: 670rpx;
    height: 1rpx;
    background: #C0C4CC;
    margin-top: 40rpx;
    opacity: 0.5;
}
