/* pages/AboutUs/AboutUs.wxss */
.AboutUs{
    height: 100vh;
    display: flex;
    flex-direction: column;
    font-weight: 700;
    font-size: 28rpx;
    background: white;
}
.header{
    height: 300rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background: white;
}
.header .name{
    width: 136rpx;
    height: 136rpx;
    line-height: 200rpx;
    text-align: center;
    background: #d8d8d8;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    overflow: hidden;
}
.header .name image{
    width: 100%;
    height: 136rpx;
    
}
.content{
    flex: 1;
}
.Business_hotline{
    background: white;
    padding: 0 36rpx;
    
}
.Business_hotline .item{
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 44rpx 0;
    border-bottom:2rpx solid #f5f6f7;
}

.footer{
    height: 300rpx;
    line-height: 300rpx;
    text-align: center;
    color: #999999;
}
