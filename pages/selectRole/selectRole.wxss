page {
  background-color: white;
}

.role {
  width: 100%;
  padding: 32rpx;
  box-sizing: border-box;
  height: 400rpx;
  position: relative;
}

.role .bg {
  width: 100%;
  height: 100%;

}

.rolename {
  position: absolute;
  left: 50%;
  transform: translate(-50%, 0);
  top: 65%;
  color: white;
  font-weight: bold;

}

.userimg {
  width: 130rpx;
  height: 130rpx;
  position: absolute;
  left: 50%;
  transform: translate(-50%, -50%);
  top: 40%;
}