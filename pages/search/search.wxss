page {
    background-color: #fff;
}

.top {
    display: flex;
    align-items: center;
    padding: 24rpx 40rpx;
    background-color: white;
}
.search_input {
    padding: 18rpx 40rpx;
    box-sizing: border-box;
    width: 670rpx;
    height: 66rpx;
    background-color: #F3F5F9;
    border-radius: 33rpx;
    position: relative;
}
.searchline{
    width: 100%;
    height: 26rpx;
    background-color: #F3F5F9;
}
.input_text_line {
    position: absolute;
    right: 97rpx;
    top: 50%;
    transform: translate(0%, -50%);
    width: 2rpx;
    opacity: 0.5;
    height: 36rpx;
    background-color: #909399;
}

.input_icon {
    position: absolute;
    right: 29rpx;
    top: 50%;
    transform: translate(0%, -50%);
    width: 39rpx;
    height: 39rpx;
}
.searchlist{
    width: 100%;
    background-color: white;
}